@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

title WhatsChat 容器图

Person(user, "用户", "使用WhatsChat进行即时通讯")
Person(admin, "系统管理员", "管理系统配置")

System_Boundary(whatsChat, "WhatsChat系统") {
    Container(webApp, "Web应用", "Next.js 14, React 18, TypeScript", "提供现代化Web界面的即时通讯应用，支持响应式设计")
    Container(mobileApp, "移动应用", "Flutter, Dart", "提供原生移动端体验的即时通讯应用，支持iOS和Android")
    Container(server, "服务器应用", "Node.js, Express, WebSocket", "处理消息路由、用户认证、实时通信和业务逻辑")
    Container(apiGateway, "API网关", "Nginx/Cloudflare", "请求路由、负载均衡、SSL终端、缓存")
    
    ContainerDb(database, "主数据库", "PostgreSQL/MongoDB", "存储用户信息、聊天记录、群组信息等结构化数据")
    ContainerDb(redisCache, "缓存数据库", "Redis", "缓存会话、在线状态、临时数据")
    Container(fileStorage, "文件存储", "AWS S3/MinIO", "存储用户上传的文件、图片、语音、视频等媒体内容")
    Container(searchEngine, "搜索引擎", "Elasticsearch", "提供全文搜索、消息搜索功能")
}

System_Ext(webrtcService, "WebRTC信令服务", "处理音视频通话信令")
System_Ext(stunTurnServer, "STUN/TURN服务器", "NAT穿透和中继服务")
System_Ext(pushService, "推送服务", "FCM/APNs消息推送")
System_Ext(emailService, "邮件服务", "SendGrid/AWS SES")
System_Ext(monitoringService, "监控服务", "Prometheus/Grafana")

Rel(user, apiGateway, "访问应用", "HTTPS")
Rel(admin, apiGateway, "系统管理", "HTTPS")

Rel(apiGateway, webApp, "路由请求", "HTTPS")
Rel(apiGateway, server, "API调用", "HTTPS")

Rel(user, mobileApp, "使用移动应用", "原生协议")

Rel(webApp, server, "发送消息/API调用", "WebSocket/HTTPS")
Rel(mobileApp, server, "发送消息/API调用", "WebSocket/HTTPS")

Rel(server, database, "读写数据", "TCP/SQL")
Rel(server, redisCache, "缓存操作", "Redis协议")
Rel(server, fileStorage, "存储文件", "S3 API")
Rel(server, searchEngine, "索引/搜索", "HTTP/REST")

Rel(webApp, webrtcService, "建立通话", "WebRTC")
Rel(mobileApp, webrtcService, "建立通话", "WebRTC")
Rel(webrtcService, stunTurnServer, "NAT穿透", "STUN/TURN")

Rel(server, pushService, "推送通知", "HTTP API")
Rel(server, emailService, "发送邮件", "SMTP/API")
Rel(server, monitoringService, "指标上报", "HTTP")

@enduml 