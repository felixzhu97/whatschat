{
  "name": "@whatschat/sdk-web",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@whatschat/sdk-communication": "workspace:*",
    "@whatschat/sdk-media": "workspace:*",
    "@whatschat/sdk-processing": "workspace:*",
    "@whatschat/sdk-recording": "workspace:*",
    "@whatschat/sdk-storage": "workspace:*",
    "events": "^3.3.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/webrtc": "^0.0.34",
    "tsup": "^8.0.0",
    "typescript": "5.8.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
