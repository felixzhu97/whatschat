    "@vitest/coverage-v8": "^2.1.8",
    "vite-tsconfig-paths": "^5.1.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "whatschat",
    "chat",
    "messaging",
    "realtime",
    "websocket",
    "nodejs",
    "nestjs",
    "typescript"
  ],
  "author": "felix zhu <z1434866867@gmail.com>",
  "license": "MIT"
}
